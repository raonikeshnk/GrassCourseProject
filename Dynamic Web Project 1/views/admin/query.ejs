<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
        <link rel="stylesheet" href="/admin/css/style.css">
    <title>Dashboard</title>
</head>

<body>
    <%- include('../../partials/admin/header.ejs')%>

    <section id="mid">
        <div class="container">
            <div class="row">
                <%- include('../../partials/admin/left.ejs')%>
                <div class="col-md-9">
                    <h2>Query Management</h2>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                            <th>S No.</th>
                            <th>User Email</th>
                            <th>User Query</th>
                            <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%record.forEach((result, key)=>{%>
                                <tr>
                                    <td><%=key+1%></td>
                                    <td><%=result.email%></td>
                                    <td><%=result.query%></td>
                                    <%if(result.status == "Replied"){%>
                                    <td><a href="/admin/reply/<%=result.id%>"><button disabled><%=result.status%></button></a></td>
                                    <%}else{%>
                                    <td><a href="/admin/reply/<%=result.id%>"><button class="btn btn-success"><%=result.status%></button></a></td>
                                    <%}%>
                                </tr>
                           <% })%>
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
    <%- include('../../partials/admin/footer.ejs')%>
    

</body>
</html>