<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
        <link rel="stylesheet" href="/admin/css/style.css">
    <title>Dashboard</title>
</head>

<body>
    <%- include('../../partials/admin/header.ejs')%>

    <section id="mid">
        <div class="container">
            <div class="row">
                <%- include('../../partials/admin/left.ejs')%>
                <div class="col-md-9">
                    <h2>Testiniminanls Management</h2>
                    <table class="table table-hover">
                        <tr>
                            <th colspan="3" class="text-center">Dashboard</th>
                        </tr>
                        <tr>
                            <td>Total: <%=ttesti%></td>
                            <td>Unpublished: <%=utesti%></td>
                            <td>Published: <%=ptesti%></td>
                        </tr>
                    </table>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>S No</th>
                                <th>Image</th>
                                <th>Quotes</th>
                                <th>Customer/Company Name</th>
                                <th>Posted Date</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%record.forEach((a,key)=>{%>
                            <tr>
                                <td><%=key+1%></td>
                                <td><img height="50px" src="/upload/<%=a.img%>" alt=""></td>
                                <td><%=a.quotes%></td>
                                <td><%=a.name%></td>
                                <td><%=a.postedDate%></td>
                                <%if(a.status=='Published'){%>
                                <td><a href="/admin/testistatusupdate/<%=a.id%>" ><button class="btn btn-success"><%=a.status%></button></a></td>
                                <%}else{%>
                                <td><a href="/admin/testistatusupdate/<%=a.id%>" ><button class="btn btn-danger"><%=a.status%></button></a></td>
                                <%}%>
                                <%if(a.status=='Unpublished'){%>
                                <td><a href="/admin/testidelete/<%=a.id%>"><i class="bi bi-trash-fill"></i></a></td>
                                <%}else{%>
                                <td><a href="/admin/testi"><i class="bi bi-trash-fill"></i></a></td>
                                <%}%>
                            </tr>
                            <%})%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
    <%- include('../../partials/admin/footer.ejs')%>
    

</body>
</html>